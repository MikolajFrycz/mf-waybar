{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces","custom/appmenu","custom/chrome","custom/files","custom/chatgpt"],
    "modules-center": ["custom/music"],
    "modules-right": ["pulseaudio", "backlight", "battery", "clock", "tray", "custom/lock", "custom/gammastep", "custom/pacman", "custom/power"],
    "hyprland/workspaces": {
        "format": "{name}",
      	"format": "{icon}",
      	"tooltip": false,
      	"all-outputs": true,
      	"format-icons": {
        "active": "ÔÜí",
        "default": "ÔÑå"
      }
     },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "custom/appmenu": {
    	"tooltip": true,
	"tooltip-format": "App Launcher",
	"on-click": "rofi -show drun -show-icons",
	"format": "ÔåÉ"
    },
    "custom/chrome": {
	"tooltip": true,
	"tooltip-format": "Open Chromium Browser",
        "return-type": "json",
        "format": "Ôâ®",
        "tooltip": "Launch Chromium",
        "on-click": "chromium"
    },
    "custom/chatgpt": {
	"tooltip": true,
	"tooltip-format": "Open ChatGPT",
	"return-type": "json",
	"format": "\uf544",
	"tooltip": "ChatGPT",
	"on-click": "chromium --app=https://chatgpt.com/"
    },
    "custom/music": {
        "format": "ÔÄÅ  {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ title }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },
    "clock": {
        "timezone": "Europe/Berlin",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "Ôó¨ {:%d/%m/%Y}",
        "format": "Ôôè {:%H:%M}"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%",
	"percentage": true
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶",
        "format-icons": {
            "default": ["ÔÄ¶  ", "ÔÄß  ", "ÔÄ®   "]
        },
        "on-click": "pavucontrol"
    },
    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c '(sleep 0.5s; swaylock --grace 0)' & disown",
        "format": "ÔÄ£"
    },
    "custom/files": {
	"tooltip": true,
	"tooltip-format": "File Manager",
    	"on-click": "thunar",
	"format": "Ó©ª"
    },
    "custom/gammastep": {
    	"tooltip": true,
	"tooltip-format": "On/Off Night Mode",
	"exec": "pgrep -x gammastep > /dev/null && echo ' üåô ' || echo ' üîÜ '",
    	"interval": 1,
    	"on-click": "toggle_gammastep.sh"
    },
    "custom/power": {
        "tooltip": true,
	"tooltip-format": "Exit Options",
        "on-click": "wlogout &",
        "format": "ÔÇã"
    },
    "custom/pacman": {
  	"format": "{}{icon}",
	"on-click": "alacritty -e bash -c 'echo \"Running full system upgrade with pacman -Syu...\"; sudo pacman -Syu; exec bash'",
  	"return-type": "json",
  	"format-icons": {
    	"pending-updates": " ÔÄô ",
    	"updated": " ÔÅù"
  	},
  	"exec-if": "which waybar-updates",
  	"exec": "waybar-updates"
    }
}
